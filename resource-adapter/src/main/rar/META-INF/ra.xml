<connector xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/connector_1_5.xsd" version="1.5">
  <description>Apache Pulsar JMS Adapter</description>
  <display-name>Apache Pulsar JMS Adapter</display-name>
  <vendor-name>DataStax</vendor-name>
  <eis-type>JMS Provider</eis-type>
  <resourceadapter-version>${project.version}</resourceadapter-version>
  <license>
    <description>Apache License Version 2.0 http://www.apache.org/licenses/LICENSE-2.0.txt</description>
    <license-required>false</license-required>
  </license>
  <resourceadapter>
    <resourceadapter-class>io.streamnative.oss.pulsar.jms.rar.PulsarResourceAdapter</resourceadapter-class>
    <config-property>
      <config-property-name>Configuration</config-property-name>
      <config-property-type>java.lang.String</config-property-type>
      <config-property-value>{"brokerServiceUrl":"pulsar://localhost:6650","webServiceUrl":"http://localhost:8080"}</config-property-value>
    </config-property>
    <outbound-resourceadapter>
      <connection-definition>
        <managedconnectionfactory-class>io.streamnative.oss.pulsar.jms.rar.PulsarManagedConnectionFactory</managedconnectionfactory-class>
        <config-property>
          <!-- JSON configuration -->
          <config-property-name>Configuration</config-property-name>
          <config-property-type>java.lang.String</config-property-type>
          <config-property-value></config-property-value>
        </config-property>
        <connectionfactory-interface>javax.jms.ConnectionFactory</connectionfactory-interface>
        <connectionfactory-impl-class>io.streamnative.oss.pulsar.jms.PulsarConnectionFactory</connectionfactory-impl-class>
        <connection-interface>javax.jms.Connection</connection-interface>
        <connection-impl-class>io.streamnative.oss.pulsar.jms.PulsarConnection</connection-impl-class>
      </connection-definition>
      <connection-definition>
        <managedconnectionfactory-class>io.streamnative.oss.pulsar.jms.rar.PulsarManagedConnectionFactory</managedconnectionfactory-class>
        <config-property>
          <!-- JSON configuration -->
          <config-property-name>Configuration</config-property-name>
          <config-property-type>java.lang.String</config-property-type>
          <config-property-value></config-property-value>
        </config-property>
        <connectionfactory-interface>javax.jms.QueueConnectionFactory</connectionfactory-interface>
        <connectionfactory-impl-class>io.streamnative.oss.pulsar.jms.PulsarConnectionFactory</connectionfactory-impl-class>
        <connection-interface>javax.jms.QueueConnection</connection-interface>
        <connection-impl-class>io.streamnative.oss.pulsar.jms.PulsarConnection</connection-impl-class>
      </connection-definition>
      <connection-definition>
        <managedconnectionfactory-class>io.streamnative.oss.pulsar.jms.rar.PulsarManagedConnectionFactory</managedconnectionfactory-class>
        <config-property>
          <!-- JSON configuration -->
          <config-property-name>Configuration</config-property-name>
          <config-property-type>java.lang.String</config-property-type>
          <config-property-value></config-property-value>
        </config-property>
        <connectionfactory-interface>javax.jms.TopicConnectionFactory</connectionfactory-interface>
        <connectionfactory-impl-class>io.streamnative.oss.pulsar.jms.PulsarConnectionFactory</connectionfactory-impl-class>
        <connection-interface>javax.jms.TopicConnection</connection-interface>
        <connection-impl-class>io.streamnative.oss.pulsar.jms.PulsarConnection</connection-impl-class>
      </connection-definition>
      <transaction-support>NoTransaction</transaction-support>
      <reauthentication-support>false</reauthentication-support>
    </outbound-resourceadapter>
    <inbound-resourceadapter>
      <messageadapter>
        <messagelistener>
          <messagelistener-type>javax.jms.MessageListener</messagelistener-type>
          <activationspec>
            <activationspec-class>io.streamnative.oss.pulsar.jms.rar.PulsarActivationSpec</activationspec-class>
            <required-config-property>
              <config-property-name>Destination</config-property-name>
            </required-config-property>
            <required-config-property>
              <config-property-name>DestinationType</config-property-name>
            </required-config-property>
            <required-config-property>
              <config-property-name>SubscriptionType</config-property-name>
            </required-config-property>
            <required-config-property>
              <config-property-name>SubscriptionMode</config-property-name>
            </required-config-property>
            <required-config-property>
              <!-- JSON configuration -->
              <config-property-name>Configuration</config-property-name>
            </required-config-property>
          </activationspec>
        </messagelistener>
      </messageadapter>
    </inbound-resourceadapter>
    <adminobject>
      <adminobject-interface>javax.jms.Queue</adminobject-interface>
      <adminobject-class>io.streamnative.oss.pulsar.jms.PulsarQueue</adminobject-class>
      <config-property>
        <config-property-name>Name</config-property-name>
        <config-property-type>java.lang.String</config-property-type>
        <config-property-value/>
      </config-property>
    </adminobject>
    <adminobject>
      <adminobject-interface>javax.jms.Topic</adminobject-interface>
      <adminobject-class>io.streamnative.oss.pulsar.jms.PulsarTopic</adminobject-class>
      <config-property>
        <config-property-name>Name</config-property-name>
        <config-property-type>java.lang.String</config-property-type>
        <config-property-value/>
      </config-property>
    </adminobject>
  </resourceadapter>
</connector>
